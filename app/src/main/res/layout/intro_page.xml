<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user_main_page" android:orientation="vertical" android:layout_margin="0dp"
        android:background="@color/blue_grey" android:padding="30dp">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="6"
                android:background="@color/Grey"
                android:theme="@style/BlueLightBlueGradientEditTextStyle" android:gravity="top"
                android:isScrollContainer="true">

            <TextView
                    android:text="@string/introduction_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" android:layout_marginTop="5dp" android:gravity="center"
                    android:padding="10dp" android:id="@+id/intro_page_title_textview" android:textSize="18sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/intro_page_paragraph_one_textview"
                    android:text="@string/intro_paragraph_one" android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" android:layout_marginTop="10dp" android:gravity="center"
                    android:padding="10dp" android:textSize="18sp"/>
            <TextView
                    android:text="@string/intro_paragraph_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/intro_page_paragraph_two_textview"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" android:layout_marginTop="10dp" android:gravity="center"
                    android:padding="5dp" android:textSize="18sp"/>
            <TextView
                    android:text="@string/intro_paragraph_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" android:layout_marginTop="10dp" android:gravity="center"
                    android:padding="5dp" android:id="@+id/intro_page_paragraph_three_textview"
                    android:textSize="18sp"/>
            <Button
                    android:text="@string/click_to_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/intro_page_enter_button"
                    android:layout_marginTop="15dp" android:focusable="false"
                    android:focusableInTouchMode="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>